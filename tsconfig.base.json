{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@northern-star/features": ["libs/shared/features/src/index.ts"],
      "@northern-star/features/server": ["libs/shared/features/src/server.ts"],
      "@northern-star/ui": ["libs/shared/ui/src/index.ts"],
      "@northern-star/ui/server": ["libs/shared/ui/src/server.ts"],
      "@northern-star/utils": ["libs/shared/utils/src/index.ts"],
      "@northern-star/utils/server": ["libs/shared/utils/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts", "**/*.tsx", "@types/**/*.d.ts", ".next/types/**/*.ts"],
  "type": ["@types/node", "@types/react", "@types/react-dom", "@types/jest",
    "@types/gtag.js"],
  "typeRoots": ["./@types", "./node_modules/@types", "./types"]
}
